@using BlogDbLibrary.Models
@model IEnumerable<Post> 
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <partial name="_Notification" />
    <div class="row pt-4 mb-2">
        <div class="col-6 text-start">
            <h1>Posts list</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Post" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new post
                </a>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach(var obj in Model)
        {
          <div class="col">
            <div class="card h-100 border-dark">
              <div class="card-header">@obj.Publisher</div>
              <div class="card-body">
                <h5 class="card-title">@obj.Title</h5>
                <p class="card-text">
                  @(new string(@obj.Text.Take(100).ToArray()))...
                </p>
                <div class="btn-group btn-group-sm ">
                   <a asp-controller="Post" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                   <a asp-controller="Post" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                   <a asp-controller="Post" asp-action="DeleteNow" asp-route-id="@obj.Id" class="btn btn-warning"><i class="bi bi-trash-fill"></i> Delete Now</a>
                </div>
              </div>
              <div class="card-footer">
                <small class="text-muted">@obj.CreatedDateTime</small>
              </div>
            </div>
          </div>
        }
    </div>
</div>

