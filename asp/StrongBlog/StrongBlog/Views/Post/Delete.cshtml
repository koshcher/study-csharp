@using BlogDbLibrary.Models
@model Post
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
       <div class="row">
           <h2>Delete post</h2>
           <hr />
       </div>
       <div class="mb-3">
           <label asp-for="Title"></label>
           <input asp-for="Title" class="form-control" disabled>     
       </div>
       <div class="mb-3">
           <label asp-for="Publisher"></label>
           <input asp-for="Publisher" class="form-control" disabled>     
       </div>
       <div class="mb-3">
           <label asp-for="Text"></label>
           <textarea asp-for="Text" class="form-control auto-resize" disabled></textarea>
       </div>
       <button type="submit" class="btn btn-primary">Delete</button>
       <a asp-controller="Post" asp-action="Index" class="btn btn-secondary">Return</a>
    </div>
</form>

